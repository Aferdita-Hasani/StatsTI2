@using StatsTI2.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<div class="bg-dark row">
    <div class="container-fluid row" style="margin-left:41%; padding-top:2%" >
        <img src="~/Images/Logo.png" style="width:150px;height:150px" />

    </div>
    <div class="container-fluid "style="padding-top:0px" >
        <div class="card card-login mx-auto mt-5">

            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
            {
                <div class="card-header">Login</div>
                @Html.AntiForgeryToken()
                <div class="card-body">
                    <form>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="form-label-group">
                                @*@Html.LabelFor(m => m.Email, new { a.for="inputEmail" })*@

                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", id = "inputEmail" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                <label for="inputEmail">Email address</label>

                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-label-group">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", id = "inputPass" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                <label for="inputPass">Password</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <div class="checkbox">
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    @Html.LabelFor(m => m.RememberMe)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div>
                                <input type="submit" value="Log in" class="btn btn-primary btn-block" />
                            </div>
                        </div>
                        @* <p>
                                @Html.ActionLink("Register as a new user", "Register")
                            </p>
                            Enable this once you have account confirmation enabled for password reset functionality
                            <p>
                                @Html.ActionLink("Forgot your password?", "ForgotPassword")
                            </p>*@
                    </form>
                </div>
            }

        </div>

    </div>
</div>

@section Scripts {
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Content/vendor/jquery-easing/jquery.easing.min.js"></script>
}
